&CONTROL
  calculation = 'scf'
  tstress = .true.
  tprnfor = .true.
  pseudo_dir = '~/qe/pot'
  disk_io = 'low'
  wf_collect = .true.
/
&SYSTEM
  ecutwfc      =  60.0
  occupations  = "smearing"
  smearing     = "m-p"
  degauss      = 0.01
/
